		<label for="company-name">Your Company Name</label>
		<input id="company-name" type="text" ng-model="companyName" />
		
		<label for="company-url">Your Company Homepage</label>
		<input id="company-url" type="url" ng-model="companyUrl" />

		<label for="company-url-plus">Your Company Google+ URL</label>
		<input id="company-url-plus" value="https://plus.google.com/+leejeans/posts" name="googlePlus" type="url" ng-model="googlePlus" ng-blur="fetchGooglePlusData()" placeholder="optional but recommendedâ€”will pull in your company logo" />

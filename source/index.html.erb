<h1>Add Gmail Microdata to Your Email</h1>
<h2>Description</h2>

<ul>
	<li><a href ng:click="selected='form'">Create Grid</a></li>
	<li><a href ng:click="selected='code'">Get Code</a></li>
</ul>

<div id="grid-view">
	<div class="grid-view-hero" style="{{featuredImageCss}}">
		<div></div>
	</div>
	<div class="grid-view-desc">
		<span class="google-icon"><img src="{{googlePlusImageUrl}}" /></span>
		<div class="from">{{companyName || '[Sender Name]'}}</div>
		<div class="subject">
			<b>{{subject || '[Subject Line]'}} </b>
		</div>
		<div class="time">Apr 1</div>
	</div>
	<div id="grid-view-select" class="grid-view-select">
		<div class="checkbox"></div>
	</div>
	<div id="grid-view-favorite" class="grid-view-favorite">
		<div class="star">
		</div>
	</div>
	<div class="grid-view-delete">
		<div class="delete"></div>
	</div>
</div>

